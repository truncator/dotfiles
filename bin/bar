#!/bin/bash

BAR_FIFO="/tmp/bar-fifo"

HEIGHT=18
UNDERLINE_HEIGHT=1
#FONT="DejaVu Sans-9.0"
FONT="tamsyn-12"
COLOR_FG="#ff878b91"
COLOR_BG="#ff252525"
COLOR_CLOCK="#ffaaaaaa"
COLOR_ACTIVE="#ffcccccc"
COLOR_INACTIVE_FILLED="#ff999999"
COLOR_INACTIVE_EMPTY="#ff454545"

bar_info()
{
    while read -r line; do
        case $line in
            W*)
                wm_info=""
                set -- ${line#?}
                IFS=":"
                while [ $# -gt 0 ] ; do
                    item="$1"
                    name="${item#?}"
                    desktop_number=${item:1}
                    case "$item" in
                        [OFU]*) wm_info=" ${wm_info}%{F$COLOR_ACTIVE}%{+u}${desktop_number}%{-u}   " ;;
                        [o]*) wm_info=" ${wm_info}%{F$COLOR_INACTIVE_FILLED}${desktop_number}   " ;;
                        [fu]*) wm_info=" ${wm_info}%{F$COLOR_INACTIVE_EMPTY}${desktop_number}   " ;;
                    esac
                    shift
                done
                wm_info="$wm_info       "
                ;;
        esac

        clock="%{F$COLOR_CLOCK}$(date "+%a, %b %d | %-I:%M:%S %p" | awk '{print tolower($0)}') "

        printf "%s\n" "%{l}${title} %{c}${wm_info} %{r}${clock}"
    done
}

if [[ $(pgrep -cx bar) -gt 1 ]]; then
    printf "%s\n" "Bar is already running." >&2
    exit 1
fi

trap "trap - TERM; kill 0" INT TERM QUIT EXIT

[[ -e "$BAR_FIFO" ]] && rm "$BAR_FIFO"
mkfifo "$BAR_FIFO"

bspc control --subscribe > "$BAR_FIFO" &
bar_loop > "$BAR_FIFO" &
#xtitle -sf "T%s" -t 100 > "$BAR_FIFO" &

cat "$BAR_FIFO" | bar_info | lemonbar -p -g 1920x"$HEIGHT"+0+0 -f "$FONT" -F "$COLOR_ACTIVE" -B "$COLOR_BG" -u "$UNDERLINE_HEIGHT" &

wait
